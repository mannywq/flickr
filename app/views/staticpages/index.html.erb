<div class="w-full">
  <% if notice.present? %>
    <p
      class="
        py-2
        px-3
        bg-green-50
        mb-5
        text-green-500
        font-medium
        rounded-lg
        inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-4">Find Flickr photos by user</h1>

  <div id="staticpages" class="min-w-full mb-8">

    <%= form_with url: '/staticpages', method: :get do |f| %>
      <%= f.label :user, "User id:" %>
      <%= f.text_field :user %>
      <%= f.submit "Find photos",
               class: "bg-blue-600 cursor-pointer text-white p-2 rounded-lg" %>
    <% end %>

  </div>
  <% if @photos.present? %>
    <h2>Showing
      <%= @photos.count %>
      photos</h2>

    <div class="columns-3 gap-4">

      <% @photos.each do |photo| %>

        <div>
          <a href="<%= photo['url_o'] %>" target="_blank"><img class="aspect-square w-full rounded-lg mb-4" src="<%= photo["url_n"] %>"></a>
        </div>

      <% end %>
    </div>
  <% else %>

    <p>No photos found</p>

  <% end %>
</div>
